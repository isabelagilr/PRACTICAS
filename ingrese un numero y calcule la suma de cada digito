#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main()
{
int n,d,s,a,b,may,men,c1,c2,numero,primo;
cout<<"ingrese un numero"<<endl;
cin>>n;
s=0;
do
{d=n%10;
s=s+d;
n=n/10;
}while(n>0);
cout<<"la suma es:"<<s<<endl;
getch();
}
