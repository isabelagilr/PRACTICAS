float poten(float b, float p);

void main()
{
	float b, p, pot;
	cout<<"INGRESE LA BASE: ";
	cin>>b;
	cout<<"INGRESE LA POTENCIA: ";
	cin>>p;
	pot=poten(b,p);
	cout<<"el resultado es: "<<pot;
	getch();
}

float poten(float b, float p)
{
	float pot;
	pot=powf(b,p);
	return (pot);
}
